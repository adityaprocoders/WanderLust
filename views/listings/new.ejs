<% layout('/layouts/boilerplate') %> 

<body>
    <div class="new-ejs">
            <div class="row m-3">
        <div class="col-8 offset-2">
         <h3>Create a New Listing</h3>

    <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label" >Title</label>
            <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
            
            <!-- validation -->
             <div class="valid-feedback">tile looks good</div>
            
        </div>
 
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" type="text" class="form-control" required></textarea>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload listing Image</label>
            <input name="listing[image]" required type="file" class="form-control" >
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="1200" type="text" class="form-control" required>

                <!-- validation -->
                <div class="invalid-feedback">please entet valid price</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="India" type="text"  class="form-control" required>
                 <!-- validation -->
                 <div class="invalid-feedback">please entet valid Country </div>
            </div>
        </div>
        
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Bihar " type="text" class="form-control" required>
             <!-- validation -->
             <div class="invalid-feedback">please entet valid location</div>
        </div>
 
        <br>
        <button class="btn btn-dark add-btn">Add</button>
        <br>
        <br> 
    </form>
</div>
</div>
    </div>

</body>
 