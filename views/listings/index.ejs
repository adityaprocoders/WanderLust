<% layout('/layouts/boilerplate') %> 
 
<body>

    <h3 class=" mt-3">All listing</h3>
   

    <!-- Create a new listings -->
<!-- 
    <form method="get" action="/listings/new">
        <button>creat New Listing</button>
    </form> -->
 
    <!-- all listings -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings){ %> 
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card listing-card col">
                    <img src="<%= listing.image.url  %>" class="card-img card-img-top" style="" alt="listing_image">
                    <!-- overlay -->
                     <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <h5 class="card-title listing-card-title"><b><%= listing.title %></b></h5>
                      <p class="card-text">&#8377;<%= listing.price %> /night</p>
                    </div>
                  </div>
            </a>
        <% } %>        
    </div>


 
</body>